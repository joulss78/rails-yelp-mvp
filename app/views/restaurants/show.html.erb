<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p>Category : <%= (@restaurant.category).capitalize %></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> <%= review.rating%>/5</li>
  <% end %>
</ul>
<br>
<p><strong><%= @restaurant.name %>'s rating : </strong></p>
<br>

<%= link_to "Add a review", "#{@restaurant.id}/reviews/new", class: "btn btn-primary"%>

<%= link_to "Back to list", "/restaurants", class: "btn btn-primary"%>
